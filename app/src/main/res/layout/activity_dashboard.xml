<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#1976D2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_title"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/totalCalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_calls"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/connectedCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connected_count"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/busyCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/busy_count"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/notAnsweredCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_answered_count"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />
</LinearLayout>
